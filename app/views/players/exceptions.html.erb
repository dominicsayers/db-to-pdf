<h3><%= ENV['APP_NAME'] %> - missing information</h3>

<table class="missing-data">
  <thead>
    <tr>
      <th>Player</th>
      <th>Date of birth</th>

      <% @fields.each do |field| %>
        <th><%= field.to_s.humanize %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= field_or_box player.full_name %></td>
        <td><%= datetime_or_box(player.date_of_birth) %></td>

        <% @fields.each do |field| %>
          <td><div><%= field_or_box player.send(field) %></div></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= standard_footer %>
